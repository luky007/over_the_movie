	"name": "Debian",
    "build": {
		"context": "..",
        "dockerfile": "Dockerfile"
	},
	"customizations": {
		"vscode": {
			"extensions": [
				"mechatroner.rainbow-csv",
				"ms-python.python",
				"shd101wyy.markdown-preview-enhanced",
				"ms-azuretools.vscode-docker",
